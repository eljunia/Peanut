@model Peanut.Web.Models.Home.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var saying in Model.Sayings)
    {
        <div class="col-md-4 clearfix">
            <div class="panel panel-default">
                <div class="panel-body">
                    @Html.Raw(saying.HtmlContent)
                </div>
                <div class="panel-footer">
                    @saying.CategoryName
                    <a class="btn btn-default btn-sm" asp-controller="Sayings" asp-action="Details" asp-route-id="@saying.Id">View</a>
                </div>
            </div>
        </div>
    }
</div>

